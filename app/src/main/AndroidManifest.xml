<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecomerce.rwm.projetopdm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProdutoActivity"
            android:label="@string/title_activity_produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginUsuActivity"
            android:label="@string/title_activity_login_usu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FormProdutoActivity"
            android:label="@string/title_activity_form_produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetalheProduto"
            android:label="@string/title_activity_detalhe_produto"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>